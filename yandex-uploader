#!/bin/sh

## hyphop ##

#
# yandex free uploader account
#

src=https://webdav.yandex.com

DIR=FREE/

P="$1"
F="$(basename "$P")"
S="$(stat -L -c%s "$P")"

time=`date +%s`

echo "[i] upload $F - $S bytes"

# url encode
U="$(curl -Gso /dev/null -w %{url_effective} --data-urlencode "$F" "" | cut -c 3-)"

curl -# -v -L --basic --header "Authorization: Basic YWNjMHVudC5mcmVlOm9rZmNua3V4cm9penR5emQ=" \
    -T "$P" $src/$DIR$U

