#!/bin/sh

## hyphop ##

url=`cat $0.link 2>/dev/null`

[ -s "bt_get.linkup" ] && {
    [ "$(cat bt_get.linkup)" ] && {
	echo "[i] get shared link" >&2
	url=`./bt_get.show_get_link`
    }
}

echo "[i] DL link: $url"

[ "$url" ] || {
echo "[e] link not defined"
exit 1
}

aria2c \
    --on-bt-download-complete="./hook.btc" \
    "$url"

#    --on-download-complete="./hook.dlc" \

echo "[i] OK"

echo "[i] what next ??? )))) "

exit 0




